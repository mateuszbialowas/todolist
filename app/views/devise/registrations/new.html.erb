<section class="bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <%= link_to root_path, class: 'flex items-center mb-6 text-2xl font-semibold text-gray-900' do %>
      <%= inline_svg_tag 'logo.svg', class: 'w-10 h-10 mr-2', alt: "logo" %>
      Todolist
  <% end %>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          Create and account
        </h1>

        <%= simple_form_for resource, url: user_registration_path do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, autofocus: true, autocomplete: "email" %>
          <%= f.input :password, autocomplete: "new-password", hint: ("#{@minimum_password_length} characters minimum") %>
          <%= f.input :password_confirmation, autocomplete: "new-password" %>

          <%= f.button :submit, "Create an account" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
