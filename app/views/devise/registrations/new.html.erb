<h2>Sign up</h2>

<%= render "devise/shared/error_messages", resource: resource %>

<%= simple_form_for resource, url: user_registration_path do |f| %>
  <%= f.input :email, autofocus: true, autocomplete: "email" %>
  <%= f.input :password, autocomplete: "new-password", hint: ("#{@minimum_password_length} characters minimum") %>
  <%= f.input :password_confirmation, autocomplete: "new-password" %>

  <%= f.button :submit, "Sign up" %>
<% end %>
<%= render "devise/shared/links" %>
