<%= turbo_frame_tag item do %>
  <div class="py-2 cursor-pointer flex items-start gap-2 text-sm group/item">
    <div class="group/check-icon">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" class="w-6 h-6 stroke-gray-500 group-hover/check-icon:hidden">
        <circle cx="12" cy="12" r="9" />
      </svg>

      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" class="w-6 h-6 stroke-gray-500 hidden group-hover/check-icon:block">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
      </svg>
    </div>

    <div class="w-full">
      <div class="flex items-center text-sm justify-between h-6">
        <div>
          <%= item.name %>
        </div>

        <%= link_to edit_item_path(item) do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="hidden w-6 h-6 stroke-gray-500 hover/item:stroke-gray-800 hover/item:bg-gray-200 group-hover/item:block rounded p-0.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
        <% end %>
      </div>

      <div class="flex items-center text-sm">
        <%- if item.created_at.year == Time.current.year %>
          <%= l item.created_at, format: :day_month %>
        <% else %>
          <%= l item.created_at, format: :day_month_year %>
        <% end %>
      </div>
    </div>

  </div>
<% end %>
